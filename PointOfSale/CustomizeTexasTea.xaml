<UserControl x:Class="PointOfSale.CustomizeTexasTea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="330"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="30" Text="Customize Texas Tea"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <CheckBox IsChecked="{Binding Path=Sweet}">Sweet</CheckBox>
            <CheckBox IsChecked="{Binding Path=Lemon}">Lemon</CheckBox>
            <CheckBox IsChecked="{Binding Path=Ice}">Ice</CheckBox>
        </StackPanel>
        <TextBlock FontSize="20" Text="Size" Grid.Row="2"/>
        <StackPanel Grid.Row="3" Orientation="Vertical">
            <RadioButton GroupName="Sizes" Name="SmallSize" IsChecked="True">Small</RadioButton>
            <RadioButton GroupName="Sizes" Name ="MediumSize">Medium</RadioButton>
            <RadioButton GroupName="Sizes" Name ="LargeSize">Large</RadioButton>
        </StackPanel>
    </Grid>
</UserControl>
