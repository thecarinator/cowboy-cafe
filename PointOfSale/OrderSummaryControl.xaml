<UserControl x:Class="PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        
    </UserControl.Resources>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="550"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="350"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding Path=Subtotal, StringFormat=c}"/>
        <ListView Grid.Row ="1" Grid.Column="0" Name ="OrderList"></ListView>
        <ListView Grid.Row ="1" Grid.Column="1" Name="TotalList"></ListView>
        <TextBlock Grid.Row="2">Subtotal</TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="2" Name ="Total"/>
        <TextBlock>Order</TextBlock>
    </Grid>
</UserControl>
