<UserControl x:Class="PointOfSale.CustomizePanDeCampo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="370"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="30" Text="Customize Pan de Campo"/>
        <TextBlock FontSize="20" Text="Size" Grid.Row="1"/>
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <RadioButton GroupName="Sizes" Name="SmallSize" IsChecked="True">Small</RadioButton>
            <RadioButton GroupName="Sizes" Name ="MediumSize">Medium</RadioButton>
            <RadioButton GroupName="Sizes" Name ="LargeSize">Large</RadioButton>
        </StackPanel>
    </Grid>
</UserControl>
